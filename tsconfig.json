{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "paths":  {
      "entities/*": ["node_modules/@hephaestus-technologies/eve-entities/dist/node/*"]
    },
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "newLine": "lf",
    "outDir": "api/build"
  },
  "exclude": ["api/build/**/*", "node_modules", "sde", "scripts", ".github"]
}
